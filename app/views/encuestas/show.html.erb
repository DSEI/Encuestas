<div>
  <%= raw @encuesta.encabezado.texto unless @encuesta.encabezado.nil?%>
</div>
<blockquote>
  <b>Encuesta:</b> <address><%=  @encuesta.nombre %></address>

<%  @encuesta.preguntas.each do |pregunta| %>
  <dl>
  <%=  " #{pregunta.texto}" %>

    <ol>
  <% pregunta.opciones.each do |opcion| %>

      <li style="margin-top: 5px;"><%=  " #{opcion.contenido}" %></li>
   
  <% end %>
      </ol>
    </dl>
<% end %>
  </blockquote>

<div>
  <%= raw @encuesta.footer.texto unless @encuesta.footer.nil?%>
</div>