<h2>Mis encuestas</h2>
<br/>
<table class="table zebra-striped" >
  <thead>
    <tr>
      <th ><b>Nombre encuesta</b></th>
      <th><%= image_tag "icon_edit.png", {:margin => 15}%></th>
      <th><%= image_tag "icono_eliminar.png", :style => "height:23px; width:23px;" %></th>
      <th><%= image_tag "icono_contestar.png", :style => "height:22px; width:22px;" %></th>
    </tr>
  </thead>
  <tbody>
<% @encuestas.each do |encuesta| %>

    
    <tr>
      <td> <%= encuesta.nombre %></td> 
  
    
        

      <td><%= link_to "Editar",edit_encuesta_url(encuesta) %></td>
      <td><%= link_to "Eliminar", encuesta_path(encuesta), :method => :delete, :confirm => "Esta seguro que desea eliminar?"%></td>

      <td><%= link_to "Contestar",contestar_encuesta_url(encuesta) %></td>
    </tr>

<% end %>
   </tbody>
</table>


<div class="digg_pagination" style="margin-bottom: 15px;">
<%= will_paginate @encuestas ,:class => "pagination"%>
  </div>

<p><%= link_to 'Crear nueva encuesta', new_encuesta_url%></p>